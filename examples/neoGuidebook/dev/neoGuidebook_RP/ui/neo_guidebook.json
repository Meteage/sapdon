{
  "namespace": "neo_guidebook",
  "page_template": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [
      "90%",
      "90%"
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_property_name": "($binding_text = #form_text)",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "stack0": {
          "type": "panel",
          "size": [
            "50%",
            "100%"
          ],
          "controls": [
            {
              "page_left@$page_left_content": {}
            }
          ]
        }
      },
      {
        "stack1": {
          "type": "panel",
          "size": [
            "50%",
            "100%"
          ],
          "controls": [
            {
              "page_right@$page_right_content": {}
            }
          ]
        }
      }
    ],
    "$page_left_content | default": "",
    "$page_right_content | default": ""
  },
  "guidebook_root_panel": {
    "type": "panel",
    "size": [
      320,
      207
    ],
    "controls": [
      {
        "book_background@book.book_background": {}
      },
      {
        "book_page_stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [
            320,
            207
          ],
          "controls": [
            {
              "stack0": {
                "type": "panel",
                "size": "$page_size",
                "controls": [
                  {
                    "book_left_panel": {
                      "type": "panel",
                      "controls": [
                        {
                          "page_crease_image@book.page_crease_left_image": {
                            "size": [
                              "100% - 40px",
                              "100% - 14px"
                            ],
                            "offset": [
                              0,
                              -2
                            ]
                          }
                        },
                        {
                          "page_edge_image@book.page_edge_left_image": {
                            "size": [
                              "100% - 7px",
                              "100% - 16px"
                            ],
                            "offset": [
                              7,
                              -1
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "stack1": {
                "type": "panel",
                "size": "$page_size",
                "controls": [
                  {
                    "book_right_panel": {
                      "type": "panel",
                      "controls": [
                        {
                          "page_crease_image@book.page_crease_right_image": {
                            "size": [
                              "100% - 40px",
                              "100% - 14px"
                            ],
                            "offset": [
                              0,
                              -2
                            ]
                          }
                        },
                        {
                          "page_edge_image@book.page_edge_right_image": {
                            "size": [
                              "100% - 7px",
                              "100% - 16px"
                            ],
                            "offset": [
                              -7,
                              -1
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ],
          "$page_size": [
            160,
            207
          ]
        }
      },
      {
        "page_content_root": {
          "type": "panel",
          "size": [
            "90%",
            "90%"
          ],
          "layer": 5,
          "controls": [
            {
              "label_text_panel": {
                "type": "panel",
                "size": [
                  32,
                  8
                ],
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "controls": [
                  {
                    "page_content": {
                      "type": "label",
                      "text": "#form_text",
                      "color": [
                        0,
                        0,
                        0
                      ]
                    }
                  }
                ]
              }
            },
            {
              "page_index_0@page_template": {
                "$binding_text": "page_index0",
                "$page_left_content": "book_intro_panel",
                "$page_right_content": "book_chapter_panel"
              }
            }
          ]
        }
      },
      {
        "close_button": {
          "type": "button",
          "size": [
            14,
            14
          ],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "button_mappings": [
            {
              "ignored": false,
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_exit",
              "mapping_type": "pressed",
              "scope": null,
              "input_mode_condition": null,
              "ignore_input_scope": false,
              "consume_event": false,
              "handle_select": false,
              "handle_deselect": false,
              "button_up_right_of_first_refusal": false
            }
          ],
          "controls": [
            {
              "default@book.close_button_default": {}
            },
            {
              "hover@book.close_button_hover": {}
            },
            {
              "pressed@book.close_button_pressed": {}
            }
          ]
        }
      },
      {
        "prev_button_panel": {
          "type": "panel",
          "size": [
            24,
            24
          ],
          "offset": [
            7,
            -9
          ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "layer": 5,
          "controls": [
            {
              "prev_button@server_form.sapdon_form_button_factory": {
                "$binding_button_text": "test1",
                "$default_texture": "textures/ui/book_pageleft_default",
                "$hover_texture": "textures/ui/book_pageleft_hover",
                "$pressed_texture": "textures/ui/book_pageleft_pressed"
              }
            }
          ]
        }
      },
      {
        "next_button_panel": {
          "type": "panel",
          "size": [
            24,
            24
          ],
          "offset": [
            -7,
            -9
          ],
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "layer": 5,
          "controls": [
            {
              "next_button@server_form.sapdon_form_button_factory": {
                "$binding_button_text": "test2",
                "$default_texture": "textures/ui/book_pageright_default",
                "$hover_texture": "textures/ui/book_pageright_hover",
                "$pressed_texture": "textures/ui/book_pageright_pressed"
              }
            }
          ]
        }
      }
    ]
  },
  "book_intro_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [
      "100%",
      "100%"
    ],
    "controls": [
      {
        "stack0": {
          "type": "panel",
          "size": [
            "100%",
            "10%"
          ],
          "controls": [
            {
              "book_name": {
                "type": "label",
                "text": "NeoGuidebook",
                "color": [
                  0,
                  0,
                  0
                ]
              }
            }
          ]
        }
      },
      {
        "stack1": {
          "type": "panel",
          "size": [
            "100%",
            "90%"
          ],
          "controls": [
            {
              "book_intro": {
                "type": "label",
                "text": "自定义的模组介绍",
                "color": [
                  0,
                  0,
                  0
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "book_chapter_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [
      "100%",
      "100%"
    ],
    "controls": [
      {
        "stack0": {
          "type": "panel",
          "size": [
            "100%",
            "10%"
          ],
          "controls": [
            {
              "book_chapter": {
                "type": "label",
                "text": "Chaper",
                "color": [
                  0,
                  0,
                  0
                ]
              }
            }
          ]
        }
      },
      {
        "stack1": {
          "type": "panel",
          "size": [
            "100%",
            "90%"
          ],
          "controls": [
            {
              "book_directory": {
                "type": "stack_panel",
                "orientation": "vertical",
                "size": [
                  "100%",
                  "100%"
                ],
                "controls": [
                  {
                    "stack0": {
                      "type": "panel",
                      "size": [
                        "100%",
                        "20%"
                      ],
                      "controls": [
                        {
                          "none": {
                            "type": "panel"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "stack1": {
                      "type": "panel",
                      "size": [
                        "100%",
                        "20%"
                      ],
                      "controls": [
                        {
                          "chaper1": {
                            "type": "stack_panel",
                            "orientation": "horizontal",
                            "size": [
                              "100%",
                              "100%"
                            ],
                            "controls": [
                              {
                                "stack0": {
                                  "type": "panel",
                                  "size": [
                                    "20%",
                                    "100%"
                                  ],
                                  "controls": [
                                    {
                                      "b1@server_form.sapdon_form_button_factory": {
                                        "$binding_button_text": "test3",
                                        "$default_texture": "textures/items/apple",
                                        "$hover_texture": "textures/items/diamond",
                                        "$pressed_texture": "textures/ui/book_pageleft_pressed"
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "stack1": {
                                  "type": "panel",
                                  "size": [
                                    "80%",
                                    "100%"
                                  ],
                                  "controls": [
                                    {
                                      "chaper_name": {
                                        "type": "label",
                                        "text": "chapter 1",
                                        "color": [
                                          0,
                                          0,
                                          0
                                        ]
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "stack2": {
                      "type": "panel",
                      "size": [
                        "100%",
                        "20%"
                      ],
                      "controls": [
                        {
                          "chaper2": {
                            "type": "stack_panel",
                            "orientation": "horizontal",
                            "size": [
                              "100%",
                              "100%"
                            ],
                            "controls": [
                              {
                                "stack0": {
                                  "type": "panel",
                                  "size": [
                                    "20%",
                                    "100%"
                                  ],
                                  "controls": [
                                    {
                                      "b1@server_form.sapdon_form_button_factory": {
                                        "$binding_button_text": "test4",
                                        "$default_texture": "textures/items/diamond",
                                        "$hover_texture": "textures/items/apple"
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "stack1": {
                                  "type": "panel",
                                  "size": [
                                    "80%",
                                    "100%"
                                  ],
                                  "controls": [
                                    {
                                      "chaper_name": {
                                        "type": "label",
                                        "text": "chapter 2",
                                        "color": [
                                          0,
                                          0,
                                          0
                                        ]
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}