{
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "resolveJsonModule": true,
        "types": [
            "@minecraft/server",
            "@minecraft/server-ui",
            "node"
        ]
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/templates/**/*",
    ]
}
