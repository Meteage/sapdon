{
    "compilerOptions": {
        "rootDir": "src",
        "target": "ESNext",
        "allowJs": true,
        "declaration": false,
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "types": [
            "@minecraft/server",
            "@minecraft/server-ui",
            "node"
        ],
        "paths": {
            "@sapdon/core/*": [
                "./src/core/*"
            ],
            "@sapdon/oc/*": [
                "./src/oc/*"
            ],
            "@sapdon/cli/*": [
                "./src/cli/*"
            ],
            "@sapdon/utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/templates/**/*",
    ]
}
