{
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "resolveJsonModule": true,
        "types": [
            "@minecraft/server",
            "@minecraft/server-ui",
            "node"
        ],
        "paths": {
            "@core/*": [
                "./src/core/*"
            ],
            "@oc/*": [
                "./src/oc/*"
            ],
            "@cli/*": [
                "./src/cli/*"
            ],
            "@utils": [
                "./src/utils/index.js"
            ]
        }
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/templates/**/*",
    ]
}
